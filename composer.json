{
    "name": "fundacion-ciudad-del-saber/ivvy-sdk-php",
    "description": "A PHP 7.1 compatible, PSR-4 and PSR-2 compliant SDK to work with iVvy's API 1.0",
    "type": "library",
    "require": {
        "guzzlehttp/guzzle": "~6.0",
        "respect/validation": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.3",
        "squizlabs/php_codesniffer": "~3"
    },
    "license": "MIT",
    "authors": [
        {"name": "Christopher Francisco", "email": "christopher.f.almanza@gmail.com"}
    ],
    "autoload": {
        "psr-4": {
            "Fcds\\Ivvy\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fcds\\IvvyTest\\": "tests/"
        }
    }
}
