{
    "name": "fundacion-ciudad-del-saber/ivvy-sdk-php",
    "description": "A PSR-4 compilant SDK to work with iVvy's API 1.0",
    "type": "library",
    "require": {
        "guzzlehttp/guzzle": "~6.0",
        "squizlabs/php_codesniffer": "3.*"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.3"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Christopher Francisco",
            "email": "christopher.f.almanza@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Fcds\\Ivvy\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fcds\\IvvyTest\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests",
        "test-coverage": "phpunit tests --coverage-text --whitelist=src",
        "lint": "phpcs -p --standard=PSR2 src tests",
        "lint-fix": "phpcbf -p --standard=PSR2 src tests",
        "test-all": ["@test-coverage", "@lint"]
    }
}
